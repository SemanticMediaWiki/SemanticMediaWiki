{
	"description": "Test `#info` with template output containing `#ask` (#2347, `wgContLang=en`, `wgLang=en`)",
	"setup": [
		{
			"namespace": "SMW_NS_PROPERTY",
			"page": "Has page",
			"contents": "[[Has type::Page]]"
		},
		{
			"namespace": "SMW_NS_PROPERTY",
			"page": "Has text",
			"contents": "[[Has type::Text]]"
		},
		{
			"namespace": "NS_TEMPLATE",
			"page": "PT0001.Ask.Output",
			"contents": "<includeonly>{{{1}}} {{{2}}}</includeonly>"
		},
		{
			"namespace": "NS_TEMPLATE",
			"page": "PT0001.Ask",
			"contents": "<includeonly>{{#ask: [[Has page::PT0001]] |?Has page |limit=1 |format=template |link=none |template=PT0001.Ask.Output }}</includeonly>"
		},
		{
			"namespace": "NS_TEMPLATE",
			"page": "PT0001",
			"contents": "{{#info: message={{PT0001.Ask}} }}"
		},
		{
			"page": "Test/PT0001/1",
			"contents": "[[Has page::PT0001]]"
		},
		{
			"page": "Test/PT0001/2",
			"contents": "{{PT0001}}"
		},
		{
			"page": "Test/PT0001/3",
			"contents": "{{#set: Has text=Text with an [[Has page::annotation]] }}"
		},
		{
			"page": "Test/PT0001/4",
			"contents": "{{#info: message={{#show: Test/PT0001/3 |?Has text }} }}"
		},
		{
			"page": "Test/PT0001/5",
			"contents": "{{#info: {{#show: Test/PT0001/3 |?Has text }} }}"
		}
	],
	"tests": [
		{
			"type": "parser",
			"about": "#0 #info with template generate output including encoded (&#91;) on/off marker",
			"subject": "Test/PT0001/2",
			"assert-output": {
				"to-contain": [
					"title=\"Test/PT0001/1 PT0001\">",
					"<span class=\"smwttcontent\">Test/PT0001/1 PT0001</span>"
				]
			}
		},
		{
			"type": "parser",
			"about": "#1 $info + #show (no annotation is leaked via a text element)",
			"subject": "Test/PT0001/4",
			"assert-store": {
				"semantic-data": {
					"strictPropertyValueMatch": false,
					"propertyCount": 3,
					"propertyKeys": [
						"_ASK",
						"_MDAT",
						"_SKEY"
					]
				}
			},
			"assert-output": {
				"to-contain": [
					"title=\"Text with an annotation\">"
				]
			}
		},
		{
			"type": "parser",
			"about": "#2 $info + #show (no annotation is leaked via a text element)",
			"subject": "Test/PT0001/5",
			"assert-store": {
				"semantic-data": {
					"strictPropertyValueMatch": false,
					"propertyCount": 3,
					"propertyKeys": [
						"_ASK",
						"_MDAT",
						"_SKEY"
					]
				}
			},
			"assert-output": {
				"to-contain": [
					"title=\"Text with an annotation\">"
				]
			}
		}
	],
	"settings": {
		"wgContLang": "en",
		"wgLang": "en"
	},
	"meta": {
		"version": "2",
		"is-incomplete": false,
		"debug": false
	}
}