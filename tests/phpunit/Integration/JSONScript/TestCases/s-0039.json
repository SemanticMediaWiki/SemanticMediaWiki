{
	"description": "Test `Special:Ask` output `#ask` (#4348)",
	"setup": [
		{
			"namespace": "SMW_NS_PROPERTY",
			"page": "Has caption",
			"contents": "[[Has type::Text]]"
		},
		{
			"namespace": "NS_FILE",
			"page": "S0039.png",
			"contents": {
				"upload": {
					"file" : "/../Fixtures/image-upload-480.png",
					"text" : "[[Has file::{{FULLPAGENAME}}]] [[Has caption::Test file]] [[Category:S0039]]"
				}
			}
		}
	],
	"tests": [
		{
			"type": "special",
			"about": "#0 (display image in table with width and thclass parameters and label for header is empty)",
			"special-page": {
				"page": "Ask",
				"query-parameters": "-5B-5BCategory:S0039-5D-5D/-3FHas-20file= |+width=75px |+thclass=unsortable",
				"request-parameters": []
			},
			"assert-output": {
				"to-contain": [
					"<table class=\"sortable wikitable smwtable broadtable\"",
                    "th class=\"unsortable\"",
                    "class=\"unsortable\"",
                    "<a href=\"/index.php/File:S0039.png\"",
                    "width=\"75\""
				],
				"not-contain": [
					"<td class=\"Has-file smwtype_wpg\""
				]
			}
		},
		{
			"type": "special",
			"about": "#1 (display image in table with width and thclass parameters and label for header has custom value)",
			"special-page": {
				"page": "Ask",
				"query-parameters": "-5B-5BCategory:S0039-5D-5D/-3FHas-20file=TestValue |+width=75px |+thclass=unsortable",
				"request-parameters": []
			},
			"assert-output": {
				"to-contain": [
					"<table class=\"sortable wikitable smwtable broadtable\"",
                    "th class=\"unsortable\"",
                    "class=\"unsortable\"",
					"TestValue",
                    "<a href=\"/index.php/File:S0039.png\"",
                    "width=\"75\""
				]
			}
		},
		{
			"type": "special",
			"about": "#2 (display image in table with height with default label for header name)",
			"special-page": {
				"page": "Ask",
				"query-parameters": "-5B-5BCategory:S0039-5D-5D/-3FHas-20file |+height=95px",
				"request-parameters": []
			},
			"assert-output": {
				"to-contain": [
					"<table class=\"sortable wikitable smwtable broadtable\"",
                    "<td class=\"Has-file smwtype_wpg\"",
                    "<a href=\"/index.php/File:S0039.png\"",
                    "height=\"95\""
				],
                "not-contain": [
                    "class=\"unsortable\""
                ]
			}
		},
		{
			"type": "special",
			"about": "#3 (display image in table with width and link=)",
			"special-page": {
				"page": "Ask",
				"query-parameters": "-5B-5BCategory:S0039-5D-5D/-3FHas-20file=TestLabel |+width=30px |+link=",
				"request-parameters": []
			},
			"assert-output": {
				"to-contain": [
					"<table class=\"sortable wikitable smwtable broadtable\"",
                    "TestLabel",
                    "<img alt=\"S0039.png\"",
                    "width=\"30\""
				],
                "not-contain": [
                    "class=\"unsortable\"",
                    "<td class=\"Has-file smwtype_wpg\"><a href=\"/index.php/File:S0039.png\""
                ]
			}
		},
        {
			"type": "special",
			"about": "#4 (display image in table with 90px - using old syntax for image size)",
			"special-page": {
				"page": "Ask",
				"query-parameters": "-5B-5BCategory:S0039-5D-5D/-3FHas-20file#90px",
				"request-parameters": []
			},
			"assert-output": {
				"to-contain": [
					"<table class=\"sortable wikitable smwtable broadtable\"",
                    "<td class=\"Has-file smwtype_wpg\"",
                    "<a href=\"/index.php/File:S0039.png\"",
                    "width=\"90\""
				]
			}
		},
		{
			"type": "special",
			"about": "#5 (display image in table with width, height, link= and align=center)",
			"special-page": {
				"page": "Ask",
				"query-parameters": "-5B-5BCategory:S0039-5D-5D/-3FHas-20file|+width=30px|+link=|+height=30px|+align=center",
				"request-parameters": []
			},
			"assert-output": {
				"to-contain": [
					"<table class=\"sortable wikitable smwtable broadtable\"",
                    "<td class=\"Has-file smwtype_wpg\"",
                    "<img alt=\"S0039.png\"",
                    "text-align:center",
					"height=\"30\"",
					"width=\"30\""
				],
                "not-contain": [
                    "class=\"unsortable\"",
                    "<td class=\"Has-file smwtype_wpg\"><a href=\"/index.php/File:S0039.png\""
                ]
			}
		}
	],
	"settings": {
		"wgEnableUploads": true,
		"wgFileExtensions": [
			"png"
		],
		"wgDefaultUserOptions": {
			"thumbsize": 5
		},
		"wgContLang": "en",
		"wgLang": "en",
		"wgLanguageCode": "en",
		"smwgNamespace": "http://example.org/id/",
		"smwgPageSpecialProperties": [
			"_MDAT"
		],
		"smwgNamespacesWithSemanticLinks": {
			"NS_MAIN": true,
			"NS_FILE": true,
			"SMW_NS_PROPERTY": true
		}
	},
	"meta": {
		"skip-on": {
			"sitelanguage": [ "ja", "Some issues with thumb output when 'ja' is used as sitelanguage." ]
		},
		"version": "2",
		"is-incomplete": false,
		"debug": false
	}
}
