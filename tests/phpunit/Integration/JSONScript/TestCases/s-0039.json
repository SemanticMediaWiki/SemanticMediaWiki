{
	"description": "Test `Special:Ask` output `#ask` (#4348)",
	"setup": [
		{
			"namespace": "SMW_NS_PROPERTY",
			"page": "Has caption",
			"contents": "[[Has type::Text]]"
		},
		{
			"namespace": "NS_FILE",
			"page": "S0039.png",
			"contents": {
				"upload": {
					"file" : "/../Fixtures/image-upload-480.png",
					"text" : "[[Has file::{{FULLPAGENAME}}]] [[Has caption::Test file]] [[Category:S0039]]"
				}
			}
		}
	],
	"tests": [
		{
			"type": "special",
			"about": "#0 (display image in table with width and thclass parameters)",
			"special-page": {
				"page": "Ask",
				"query-parameters": "-5B-5BCategory:S0039-5D-5D/-3FHas-20file=|+width=75px|+thclass=unsortable",
				"request-parameters": []
			},
			"assert-output": {
				"to-contain": [
					"<table class=\"sortable wikitable smwtable broadtable\"",
                    "th class=\"unsortable\"",
                    "class=\"unsortable\"",
                    "<td class=\"Has-file smwtype_wpg\"",
                    "<a href=\"/index.php/File:S0039.png\"",
                    "width=\"75\"",
                    "<img alt=\"S0039.png\" src=\"/images/thumb/6/65/S0039.png/75px-S0039.png\" decoding=\"async\" width=\"75\""
				]
			}
		},
        {
			"type": "special",
			"about": "#1 (display image in table with height)",
			"special-page": {
				"page": "Ask",
				"query-parameters": "-5B-5BCategory:S0039-5D-5D/-3FHas-20file=|+height=95px",
				"request-parameters": []
			},
			"assert-output": {
				"to-contain": [
					"<table class=\"sortable wikitable smwtable broadtable\"",
                    "<td class=\"Has-file smwtype_wpg\"",
                    "<a href=\"/index.php/File:S0039.png\"",
                    "height=\"95\""
				],
                "not-contain": [
                    "class=\"unsortable\""
                ]
			}
		},
        {
			"type": "special",
			"about": "#2 (display image in table with width and link=)",
			"special-page": {
				"page": "Ask",
				"query-parameters": "-5B-5BCategory:S0039-5D-5D/-3FHas-20file=|+width=30px|+link=",
				"request-parameters": []
			},
			"assert-output": {
				"to-contain": [
					"<table class=\"sortable wikitable smwtable broadtable\"",
                    "<td class=\"Has-file smwtype_wpg\"",
                    "><img alt=\"S0039.png\" src=\"/images/thumb/6/65/S0039.png/30px-S0039.png\" decoding=\"async\" title=\"S0039.png\" width=\"30\" height=\"30\" srcset=\"/images/thumb/6/65/S0039.png/45px-S0039.png 1.5x, /images/thumb/6/65/S0039.png/60px-S0039.png 2x\""
				],
                "not-contain": [
                    "class=\"unsortable\"",
                    "<td class=\"Has-file smwtype_wpg\"><a href=\"/index.php/File:S0039.png\""
                ]
			}
		},
        {
			"type": "special",
			"about": "#3 (display image in table with 90px - using old syntax for image size)",
			"special-page": {
				"page": "Ask",
				"query-parameters": "-5B-5BCategory:S0039-5D-5D/-3FHas-20file#90px",
				"request-parameters": []
			},
			"assert-output": {
				"to-contain": [
					"<table class=\"sortable wikitable smwtable broadtable\"",
                    "<td class=\"Has-file smwtype_wpg\"><a href=\"/index.php/File:S0039.png\" class=\"image\" title=\"S0039.png\"><img alt=\"S0039.png\" src=\"/images/thumb/6/65/S0039.png/90px-S0039.png\" decoding=\"async\" width=\"90\" height=\"90\" srcset=\"/images/thumb/6/65/S0039.png/135px-S0039.png 1.5x, /images/thumb/6/65/S0039.png/180px-S0039.png 2x\""
				]
			}
		}
	],
	"settings": {
		"wgEnableUploads": true,
		"wgFileExtensions": [
			"png"
		],
		"wgDefaultUserOptions": {
			"thumbsize": 5
		},
		"wgContLang": "en",
		"wgLang": "en",
		"wgLanguageCode": "en",
		"smwgNamespace": "http://example.org/id/",
		"smwgPageSpecialProperties": [
			"_MDAT"
		],
		"smwgNamespacesWithSemanticLinks": {
			"NS_MAIN": true,
			"NS_FILE": true,
			"SMW_NS_PROPERTY": true
		}
	},
	"meta": {
		"skip-on": {
			"sitelanguage": [ "ja", "Some issues with thumb output when 'ja' is used as sitelanguage." ]
		},
		"version": "2",
		"is-incomplete": false,
		"debug": false
	}
}
